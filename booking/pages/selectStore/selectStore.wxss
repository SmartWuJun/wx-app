/* selectStore.wxss */

page {
    height: 100%;
}

.main {
    display: flex;
    flex-direction: column;
    height: 100%;
}

.map {
    flex: 1;
    border: 5px solid red;
}

#map {
    width: 100%;
    /* height: 300px; */
    flex: 1;
}

.icon-location {
    background: url(data:image/png;base64,) no-repeat;
    background-size: contain;
    width: 1.23rem;
    height: 1.23rem;
    text-align: center;
    font-size: 13px;
    color: #fff;
    margin-right: 5px;
}

.icon-location-tip {
    /* background: url(data:image/png;base64,) no-repeat;
    background-size: contain; */
    width: .8rem;
    height: .8rem;
    /* text-align: center;
    font-size: 13px;
    color: #fff; */
    margin-right: 5px;
    display: inline-block;
}

.inline {
    display: inline;
}

.stores {
    padding: .5rem 0;
    max-height: 10rem;
}

.store {
    display: flex;
    padding: 0.25rem .6rem;
    font-size: 14px;
}

.store-info {
    flex: 1;
    display: flex;
}

.store-info.active {
    color: #da753f;
}

.store-name {
    margin-right: 8px;
}

.btn-sure {
    background: #da753f;
    color: #fff;
}

.info {
    text-align: center;
}

.tip {
    width: 19rem;
    /* height: 100px; */
    padding: .5rem 0;
    background: #fff;
    position: absolute;
    top: 10px;
    left: 50%;
    transform: translateX(-50%);
    box-shadow: 0 0 10px 2px #ccc;
    text-align: center;
    font-size: 14px;
}

.select-location {
    /* padding-left: 1rem; */
    /* background: url(data:image/png;base64,) no-repeat; */
    /* background-size: 0.62rem 0.62rem; */
    display: inline-block;
    line-height: 1.5;
    /* background-position: 2px 5px; */
}

.tip-info {
    line-height: 1.5
}

.location-tag {
    width: 10px;
    height: 22px;
    position: absolute;
    top: 46%;
    left: 50%;
    transform: translate(-50%, -50%)
}