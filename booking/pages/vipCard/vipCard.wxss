/* vipCard.wxss */

page{
    padding: 1rem .8rem;
    background: #fff;
    font-size: 12px;
    color: #333;
    line-height: 2;
    text-align: center;
}

.bind-card-content{
    box-shadow: 0 0 15px 2px #ccc;
    padding:.5rem 1rem 1rem;
    text-align: left;
    margin-bottom: 20px;
}


.content-title{
    line-height: 3;
    text-align: center;
}

.text-card{
    border-bottom: 1px solid #ddd;
    margin-top: 10px;
}

.btn{
    padding: 5px 10px;
    background: #da753f;
    color: #fff;
    display: inline-block;
    min-width: 80px;
}

.tip{
    color: #666;
    font-size: 12px;
    text-align: left;
    padding-left: 1rem;
    margin-top: 30px;
}

.card-content{
     box-shadow: 0 0 15px 2px #ccc;
    padding:1rem;
    text-align: left;
    margin-bottom: 20px;
}

.card-content .row{
    display: flex;
    justify-content: space-between;
}

.balance{
    color: #da753f
}