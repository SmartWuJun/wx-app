/* pages/login/login.wxss */
.xn-main{
  background-color: #F8F8F8;
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6; 
  box-sizing: border-box;
  display: -webkit-flex; /* Safari */
  display: flex;
  width: 100%;
  flex-direction: column;
 overflow-y: auto;
}
.logo{
  width: 6rem;
  height: 6rem;
  margin:3rem auto;
  border: 1px solid #ddd;
  border-radius:50%; 
  overflow: hidden;
}
.logo-img{
  width: 6rem;
  height: 6rem;
  border-radius:50%; 
  overflow: hidden
}

.login-layout{
  margin: 0.25rem 15px;
}
.xn-input-line{
  margin-bottom: 1rem;
  border-bottom: 1px solid #ddd;
  font-size: 14px;
}
.login-label{
  float: left;
  height:2rem;
  width: 4rem;
  line-height: 2rem;  
}
.login-input{
  overflow: hidden;
  line-height: 2rem;  
  height:2rem;
}

.login-input input{
  width: 100%;
  line-height: 2rem;  
  height:2rem;
}

.login-info{
  width: 100%;
  height:3rem;
  line-height: 2rem;
}

.login-info .forget{
  float: left;
   height:2rem;
  line-height: 2rem;
  color: #f90;
  font-size: 16px;
  padding:0 0.5rem;
}
.login-info .register{
  overflow: hidden;
  height:2rem;
  line-height: 2rem;
  color: #f90;
  font-size: 16px;
  padding:0 0.5rem;
  text-align: right
}
