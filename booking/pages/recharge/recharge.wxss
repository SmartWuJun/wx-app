/* recharge.wxss */
page {
  background: #fff;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}
.recharge{
  padding:30px;
}
.title{
  font-size:59rpx;
}
.card{
  display: flex;
  width:100%;
  font-size:14px;
  justify-content: space-between;
}
.card+.card{
  border-top:1px solid #ddd;
  width:100%;
}
.card text{
  text-align: right;
}
.panel{
  margin-top:20px;
}
.panel-row{
  display: flex;
}
.panel-block{
  flex: 1;
  text-align: center;
  padding: .3rem;
}
button{
  font-size:13px;
  padding-left:0px;
  padding-right:0px;
}
 /* .button-hover {
  background-color: #f90;
}  */

button.active{
    background-color: #f90;
    color: #fff;

}
button label{
  font-size:20rpx
}
.submit{
  width:30%;
  background: #f90;
}
.more_hide {
  display: none;
}
.more_show {
  display: flex;
}
.block_show {
  display: block;
}
