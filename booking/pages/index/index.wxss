/* index.wxss */
.main{
    padding: 0.75rem;
    display: flex;
    flex-direction: column;
    /* align-items: center; */
}

.link{
    padding: 1rem 0.75rem;
    font-size: 14px;
    background: #fff;
    box-shadow: 0px 0  15px 2px #ccc;
    margin-bottom: .5rem;
    flex: 1;
}
.link .item{
     display: flex;
    justify-content: space-between;
    align-items: center;
}
.link .name{
    color: #e39b74;
}

.link .arrow{
    width: 10px;
    height: 10px;
    border-top: 1px solid #666;
    border-right: 1px solid #666;
    transform: rotate(45deg);
}

.book{
    background: #da753f;
    color: #fff;
    align-self: center;
    padding: 2px 15px;
}

.mask{
    position: absolute;
    top: 0;
    bottom: 0;
    right: 0;
    left: 0;
    background: rgba(0, 0, 0, .5);
    /* opacity: 0.3; */
    padding: 1rem;
}

.proup{
    background: #fff;
    padding: 0 .5rem;
    padding-bottom: .5rem;
    box-shadow: 0 0 10px 2px #666;
    position: absolute;
    bottom: 1rem;
    width: 90%;
}

.proup-title{
    line-height: 2;
    border-bottom: 1px solid #ddd;
    text-align: center;
}

.proup-content{
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    padding-top: 10px;
}

.proup-content .block{
  
    width: 48%;
    border: 1px solid #eee;
    font-size: 14px;
    text-align: center;
    margin-bottom: 5px;
    padding-top: 1rem;
}
.proup-content .block image{
    width: 3rem;
    height: 3rem;

}
.mask .tip{
    width: 90%;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    border-radius: 8px;
}

.tip-head{
    background: #393939;
    height: 1.8rem;
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
}

.tip-content{
    background: #fff;
    padding: 1.5rem 1rem;
    border-bottom-left-radius: 10px;
    border-bottom-right-radius: 10px;
    text-align: center;
}



.btn-add{
    display: inline-block;
    padding: 5px 1rem;
    background: #da753f;
    color: #fff;
    margin-top: 1rem;
    font-size: 14px;
    margin-right: 10px;
}
.btn-no-add{
     display: inline-block;
    padding: 5px 1rem;
    background: #393939;
    color: #fff;
    margin-top: 1rem;
    font-size: 14px;
}
.btn-close{
    width: 1rem;
    height: 1rem;
    position: absolute;
    top: 10px;
    right:10px;
}

.tip-title{
     border: 1px solid #ddd;
    color: #da753f;
    text-align: center;
    padding: 5px 0;
    line-height: 2;
}

.item-content{
    flex: 1;
    text-align: right;
}