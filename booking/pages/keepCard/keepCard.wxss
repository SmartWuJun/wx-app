/* keepCard.wxss */
page{
    padding: 1rem .6rem;
    font-size: 12px;
}

.box{
    background: #fff;
    box-shadow: 0 0 15px 2px #ccc;
    margin-bottom: 20px;
    padding: .5rem 1.5rem;
}

.box-title{
    font-size: 36px;
    font-weight: 400;
}

.card-name{
    font-size: 14px;
    line-height: 2;
    border-bottom: 1px solid #ddd;
}

.typeList{
    padding: 10px 0;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}

.type{
    padding: 0 10px;
    min-width: 60px;
    border: 1px solid #ccc;
    color: #ccc;
    text-align: center;
    flex-shrink: 0;
    margin-bottom: 5px;
}

.type.active{
    color: #fff;
    background: #da753f;
}

.row {
    line-height: 2;
}
.row label{
    color: #da753f;
    
}
.quan{
    display: flex;
    align-items: center;
}
.quan:after{
    display: block;
    width: 8px;
    height: 8px;
    border-top: 1px solid #333;
    border-right: 1px solid #333;
    transform: rotate(45deg);
    content: '';
    margin-left: 5px;
}

.pay-types{
    border-top: 1px solid #ddd;
    margin-top: 5px;
    padding: 5px 0;
}

.pay-types .radio{
    color: #333;
}
.btn{
    background: #da753f;
    color: #fff;
    font-size: 14px;
    padding: 5px 15px;
    min-width: 80px;
    text-align: center;
    display: inline-block;
}