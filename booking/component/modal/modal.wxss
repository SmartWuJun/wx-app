/* modal.wxss */
.modal-mask{
    position: fixed;
    top: 0;
    bottom: 0;
    right: 0;
    left: 0;
    background: rgba(0, 0, 0, .5);
    /* opacity: 0.3; */
    padding: 1rem;
    z-index: 999;
}
.modal-mask .modal-tip{
    width: 90%;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    border-radius: 8px;
    z-index: 1000;
}

.modal-tip-head{
    background: #393939;
    height: 1.8rem;
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
}

.modal-tip-content{
    background: #fff;
    padding: 1.5rem 1rem;
    border-bottom-left-radius: 10px;
    border-bottom-right-radius: 10px;
    text-align: center;
}



.modal-ok{
    display: inline-block;
    padding: 5px 1rem;
    background: #da753f;
    color: #fff;
    margin-top: 1rem;
    font-size: 14px;
    margin-right: 10px;
}
.modal-cancel{
     display: inline-block;
    padding: 5px 1rem;
    background: #393939;
    color: #fff;
    margin-top: 1rem;
    font-size: 14px;
}
.modal-close{
    width: 1rem;
    height: 1rem;
    position: absolute;
    top: 10px;
    right:10px;
}

.modal-tip-title{
     border: 1px solid #ddd;
    color: #da753f;
    text-align: center;
    padding: 5px 0;
    line-height: 2;
}

.modal-input{
    border: 1px solid #ddd;
    color: #333;
    text-align: center;
    padding: 5px 0;
}
