/**app.wxss**/

@import "/component/modal/modal.wxss";
@import "/component/tip/tip.wxss";


page {
  background-color: #efeff4;
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
  box-sizing: border-box;
  display: -webkit-flex; /* Safari */
  display: flex;
  width: 100%;
  flex-direction: column;
  font-family: "微软雅黑";
}
body{
  font-size: 12px;
  line-height: 1.5;
  color:#333 ;
  font-family:'Microsoft YaHei', Verdana, sans-serif, 'SimSun';
  background:#f3f4f5;
  overflow: hidden;
}
view{
 box-sizing: border-box;
}

.xn-text-center{
 text-align: center;
}
.xn-text-right{
 text-align: right;
}
.xn-text-left{
 text-align: left;
}
.xn-input-line{
  margin-bottom: 10px;
}

.clearfix:after{
  content:".";
  display:block;
  clear:both;
  visibility:hidden;
  line-height:0;
  height:0;
  overflow: hidden;
}


.xn-footer{
  margin-top: 2.4rem;
}

.xn-footer .foot-layout{
  height: 2.4rem;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  border-top: 1rpx solid #dcdcdc;
  background: #fff;
  display: flex;
  display: -webkit-flex; /* Safari */
}

.xn-footer .foot-layout .foot-item{
  width: 25%;
  height: 100%;
  padding: 0.2rem 0;
}

.xn-footer .foot-layout .foot-item .icon{
   display: block;
   margin:0 auto;
   width: 80%;
   height: 1rem;
   margin-bottom:0.2rem;
}

.xn-footer .foot-layout .foot-item text{
   display: block;
   width: 100%;
   height: 0.8rem;
   line-height: 0.8rem;
   font-size: 12px;
   text-align: center;
   color: #999;
}
.xn-footer .foot-layout .active text{
   color: #39f;
}

.xn-between{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.xn-btn{
	font-size: 14px;
	line-height: 1.5;
	padding: 10rpx 44rpx;
	border-radius: 0;
	text-align: center;
	background: #da753f;
	color: #fff;
	display: inline-block;
}

.xn-logo-layout{
   margin: 50rpx auto;
   width: 180rpx;
   height: 180rpx;
}
.xn-logo-img{
   width: 180rpx;
   height: 180rpx;
}

.xn-row-layout{
  margin:0;
}

.xn-row{
  margin:0 30rpx;
  display: flex;
  border-bottom: 1rpx solid #ddd;
}
.xn-input{
   display: block;
   padding: 20rpx 19rpx;
   flex: 1;
}

.xn-btn{
  background: #ff9367;
  height: 92rpx;
  line-height: 92rpx;
  font-size:32rpx;
  display: block;
  border-radius: 8rpx;
  padding: 0;
  margin: auto 45rpx;
}
.set-btn{
  background: transparent;
  border:0px solid transparent;
  height: 92rpx;
  line-height: 92rpx;
  font-size:36rpx;
  display: block;
  border-radius: 8rpx;
  padding: 0;
  color: #39f;
  margin-right: 24rpx;
}


.xn-row1{
  display: flex;
  flex-direction:row;
  align-items: center;
  border-bottom: 1rpx solid #ddd;
  margin-left: 30rpx;
  width: 720rpx;
  padding: 30rpx 0 30rpx 10rpx;
}
.xn-row1:last-child{
  border-bottom: transparent;
}

.xn-row1 .row-lable{
  width: 180rpx;
  color: #666;
  font-size:28rpx;
}
.xn-row1 .row-content{
  flex: 1;
  color: #000;
  font-size: 28rpx;
  text-align: right;
  margin-right: 20rpx
}
.xn-row1 .row-link{
  height: 33rpx;
  margin-right: 30rpx;
  
}
.xn-row1 .row-link .link-img{
  float: left;
  width: 18rpx;
  height: 33rpx;
}
.xn-row1 .row-link .link-edit{
  float: left;
  width: 30rpx;
  height: 30rpx;
}
.xn-row1 .row-link .link-select{
  float: left;
  width: 30rpx;
  height: 30rpx;
}
.mt-60{
  margin-top:60rpx; 
}
.mt-30{
  margin-top:30rpx; 
}
.xn-textarea{
  font-size: 28rpx;
  line-height: 40rpx;
  height: 120rpx;
  text-align: left;
}
.xn-text-center{
  text-align: center;
}
.xn-text-left{
  text-align: left;
}


.xn-picker{
  flex: 1
}
.xn-picker .row-picker{
  display: flex;
  flex-direction: row;
  align-items: center;
}