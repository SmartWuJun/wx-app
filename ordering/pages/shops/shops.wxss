/* pages/shops/shops.wxss */
.xn-main{
  height: 100%;
  width: 750rpx;
  display: flex;
  flex-direction:column;
  flex: 1;
}
.flash{
  position: relative;
  height: 260rpx;
}
.flash-img{
  height: 260rpx;
  width: 750rpx;
}
.bulletin{
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 58rpx;
  overflow: hidden;
  background: rgb(0,0,0,.5);
}
.bulletin-text{
  display: block;
  width: 750rpx;
  height: 58rpx;
  line-height: 58rpx;
  color: #fff;
  font-size: 24rpx;
  padding: 0 10rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.scroll{
flex: 1;
overflow: hidden;
background: #fff;
}


.shops{
  width: 750rpx;
  height: 100%;
}
.item{
  padding: 30rpx;
  border-bottom: 1rpx solid #ddd;
}
.item-img-box{
  float: left;
  width: 210rpx;
  height: 160rpx;
  overflow: hidden;
  margin-right: 20rpx;
}
.item-img{
  float: left;
  width: 210rpx;
  height: 160rpx;
  overflow: hidden
}
.item-content{
  overflow: hidden;
}
.item-title{
  display: inline-block;
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size:36rpx;
  color:#000000;
    overflow: hidden;
}

.item-distance{
  display: inline-block;
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size:28rpx;
  color:#666666;
  overflow: hidden;
  margin-bottom: 5rpx;
}

.item-location{
  display: inline-block;
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size:28rpx;
  color:#666666;
  overflow: hidden;
}
.location-icon{
  padding: 5rpx;
  margin-right: 10rpx;
  float: left;
  width: 30rpx;
  height: 30rpx;
  border-radius:4rpx; 
}
.item-location-text{
  overflow: hidden;
  height: 40rpx;
  line-height: 40rpx;
  font-size:28rpx;
  color:#666666;
}