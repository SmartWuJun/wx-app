/* pages/address/address.wxss */

.xn-main{
  height: 100%;
  width: 750rpx;
  display: flex;
  flex-direction:column;
  flex: 1;
  background: #efeff4;
}
.address-layout{
  flex: 1;
  height: 100%;
  overflow: hidden;
}


.address-list{
  height: 100%;
  width: 750rpx;
}
.xn-row-list{
  background: #fff;
}
.row-info{
  text-align:left;
  line-height: 45rpx;
  font-size:32rpx;
  color:#333333;
}
.name{
  color: #000;
  margin-right: 20rpx;
}
.address{
  text-align:left;
  line-height: 40rpx;
  font-size:28rpx;
  color:#666;
}

.xn-add{
  border-top: 1rpx solid #ddd;
  padding: 30rpx;
  text-align: center;
  font-size:28rpx;
  color:#ee5e53;
  line-height: 40rpx;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 70rpx;
}
.add-icon{
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}