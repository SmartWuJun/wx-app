/* pages/orderList/orderList.wxss */
@import "/pages/my/my.wxss";
.order{
	padding-left: 30rpx;
	background: #fff;
	margin-bottom: 20rpx;
}
.order-header{
	border-bottom: 1rpx solid #ddd;
	padding: 30rpx 30rpx 30rpx 0;
	display: flex;
	justify-content: space-between;
	align-items: center;
	font-size: 14px;
	color: #999;
}

.order-status{
	color: #666;
}
.order-status.wait-pay{
	color: #ff5c05;
}


.order-rows{
	padding: 10rpx 30rpx 20rpx 0;
}

.order-row{
	font-size: 14px;
	color: #000;
	margin-top: 30rpx;
	display: flex;
	align-items: center;

}
.item-name{
	flex: 1;
}
.item-count{
	color: #999;
}
.item-price{
	width: 120rpx;
	flex-shrink: 0;
	text-align: right;
}

.total-price{
	padding:20rpx 30rpx 30rpx;
	text-align: right;
	font-size: 14px;
	color: #333;
}

.bt{
	border-top: 1rpx solid #ddd;
}

.order-footer{
	padding: 28rpx 30rpx 34rpx;
	border-top: 1rpx solid #ddd;
	text-align: right;
}

.btn-pay{
	color: #333;
	font-size: 14px;
	padding: 3rpx 18rpx;
	border: 1rpx solid #ddd;
	border-radius: 2rpx;
	display: inline-block;
}