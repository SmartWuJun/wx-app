/*****弹出层******/

.mask {
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background: rgba(0, 0, 0, 0.5);
    z-index: 9;
}

.mask-block {
    position: absolute;
    top: 30%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 640rpx;
    background: #f4f4fb;
    padding: 40rpx 36rpx 80rpx;
    border-radius: 4rpx;
    
    text-align: center;
}

.block-header {
    font-size: 16px;
    color: #000;
	position: relative;
	font-weight: bold;
}
.block-body{
	font-size: 36px;
	margin-top: 44rpx;
}
.block-footer{
	padding-top: 50rpx;
}
.icon-close{
	width: 20rpx;
	height: 20rpx;
	position: absolute;
	right: -10rpx;
	top: -10rpx;
}
.pwds{
	border: 1rpx solid #ddd;
	border-radius: 4px;
	width: 568rpx;
	height: 94rpx;
	display: flex;
	background: #fff;
	padding: 14rpx 0;
}
.pwd-dot{
	flex: 1;
	display: flex;
	align-items: center;
	justify-content: center;
}
.pwd-dot+.pwd-dot{
	border-left: 1rpx solid #ddd;
}

.dot{
	display: block;
	width: 24rpx;
	height: 24rpx;
	background: #000;
	border-radius: 50%;
}
