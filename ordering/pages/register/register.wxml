<!--pages/register/register.wxml-->
<view class='xn-main'>
  <view class='xn-logo-layout'><image class='xn-logo-img' src='/images/logo.png' mode="aspectFit" ></image></view>
  <view class='.xn-row-layout'>
   <view class='xn-row'>
      <input class='xn-input' type='text' placeholder="手机号" value='{{mobilePhone}}'  bindinput="bindInputMobilePhone"></input>
    </view>
    <view class='xn-row'>
      <input class='xn-input' type='text' placeholder="验证码"></input>
      <view class='set-btn' bindtap="sendCode" disabled="{{sendCodeDisabled}}">{{sendCodeTip}}</view>
    </view>
    <view class='xn-row'>
      <input class='xn-input' type='password' placeholder="登录密码" bindinput="bindInputMobilePhone" value='{{mobilePhone}}'></input>
    </view>
    <view class='xn-row'>
      <input class='xn-input' type='password' placeholder="确认密码"></input>
    </view>
    <button class='xn-btn mt-60' bindtap="submit">注册</button>
  </view>
</view>

