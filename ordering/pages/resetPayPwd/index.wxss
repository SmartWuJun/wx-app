/* pages/resetPayPwd/index.wxss */
page{
	background: #efeff4;
}

.block {
    padding: 40rpx 45rpx;
}

.tip {
    font-size: 16px;
    color: #000;
	padding-left: 7rpx;
}

.pwds {
    margin-top: 20rpx;
    background: #fff;
    border: 1rpx solid #ddd;
    border-radius: 9rpx;
    width: 660rpx;
    height: 96rpx;
    display: flex;
	padding: 20rpx 0;
}

.pwd-dot {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
}

.pwd-dot+.pwd-dot {
    border-left: 1rpx solid #ddd;
}

.dot {
    display: block;
    width: 24rpx;
    height: 24rpx;
    background: #000;
    border-radius: 50%;
}

.hiddenInput {
    opacity: 0;
    position: absolute;
    left: -100%;
    z-index: -10;
    top: 0;
}

.btn-sure{
	background: #ff9367;
	border-radius: 8rpx;
	width: 660rpx;
	height: 76rpx;
	color: #fff;
	text-align: center;
	line-height: 76rpx;
	margin-top: 30rpx;
}